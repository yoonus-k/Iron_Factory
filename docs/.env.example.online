# ============================================
# ملف .env للسيرفر الأونلاين (Central Server)
# ============================================

APP_NAME="Factory System"
APP_DEBUG=false                    # مهم: غير هذا لـ false في الإنتاج
APP_ENV=production
APP_URL=https://yourdomain.com     # غيّر لرابط موقعك
APP_KEY=base64:YOUR_KEY_HERE       # استخدم: php artisan key:generate

LOG_CHANNEL=daily

# قاعدة البيانات على السيرفر الأونلاين
DB_CONNECTION=mysql
DB_HOST=localhost                  # أو عنوان MySQL من cPanel
DB_PORT=3306
DB_DATABASE=yourdatabase_name      # اسم قاعدة البيانات من cPanel
DB_USERNAME=yourdatabase_user      # مستخدم قاعدة البيانات
DB_PASSWORD=your_db_password       # كلمة المرور

# إعدادات الجلسة
CACHE_STORE=file
QUEUE_CONNECTION=database          # استخدم database للمزامنة
SESSION_DRIVER=file
SESSION_LIFETIME=120

# البريد الإلكتروني
MAIL_MAILER=smtp
MAIL_HOST=mail.yourdomain.com
MAIL_PORT=465
MAIL_USERNAME=noreply@yourdomain.com
MAIL_PASSWORD=your_email_password
MAIL_ENCRYPTION=ssl
MAIL_FROM_ADDRESS=noreply@yourdomain.com
MAIL_FROM_NAME="${APP_NAME}"

# ============================================
# إعدادات المزامنة - السيرفر الأونلاين (المركزي)
# ============================================

# هذا سيرفر مركزي أونلاين
IS_CENTRAL_SERVER=true

# لا تحتاج لهذه القيم على السيرفر المركزي
CENTRAL_SERVER_URL=
CENTRAL_SERVER_TOKEN=

# تفعيل نظام المزامنة
SYNC_ENABLED=true

# فترة المزامنة التلقائية (بالثواني) - 300 = 5 دقائق
SYNC_AUTO_INTERVAL=300

# حجم الدفعة في كل عملية مزامنة
SYNC_BATCH_SIZE=100

# عدد محاولات إعادة المزامنة عند الفشل
SYNC_MAX_RETRIES=3

# تأخير إعادة المحاولة (بالثواني)
SYNC_RETRY_DELAY=60

# معرف الجهاز
DEVICE_ID=CENTRAL-SERVER

# اسم الجهاز
DEVICE_NAME="Central Server - Online"

# تشفير البيانات أثناء المزامنة (اختياري)
SYNC_ENCRYPTION=true

# الجداول المستثناة من المزامنة (مفصولة بفواصل)
SYNC_EXCLUDED_TABLES=migrations,password_resets,sessions,cache
